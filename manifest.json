{
    "manifest_version": 2,
    "name": "Bitbucket JIRA Linker",
    "version": "0.3",
    "options_ui": 
    {
        "page": "options.html",
        "chrome_style": true
    },
    "description": "Links commit messages to JIRA ticket",
    "content_scripts": [
        {
            "matches": ["https://bitbucket.org/*", "file:///*/test*.html"],
            "js": ["jquery-3.1.1.min.js", "content.js"]
        }
    ],
    "permissions": [
        "storage"
    ]
}
